// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Candidate {
  cid      String @id
  document String @unique
  email    String @unique
  phone    String @unique
  name     String
  party    String
}

model Mission {
  mssid       String  @id
  description String
  completed   Boolean
  memberId    Member? @relation(fields: [mssid], references: [mid])
}

model Member {
  mid      String    @id
  cid      String
  document String    @unique
  email    String    @unique
  phone    String    @unique
  name     String
  missions Mission[]
}
